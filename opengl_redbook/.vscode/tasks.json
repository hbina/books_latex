{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tectonic build",
            "type": "shell",
            "command": "tectonic",
            "args": [
                "opengl_redbook.tex",
                "--keep-intermediates",
                "--print",
                "--keep-logs"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}